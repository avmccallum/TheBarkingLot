<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PetInfoFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="1"
            android:padding="@dimen/minimal_margin"
            android:src="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="1"
            android:padding="@dimen/minimal_margin"
            android:src="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="1"
            android:padding="@dimen/minimal_margin"
            android:src="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="1"
            android:padding="@dimen/minimal_margin"
            android:src="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="1"
            android:padding="@dimen/minimal_margin"
            android:src="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="1"
            android:padding="@dimen/minimal_margin"
            android:src="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="1"
            android:padding="@dimen/minimal_margin"
            android:src="@drawable/ic_baseline_circle_24" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/petInfoRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/card_margin"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>