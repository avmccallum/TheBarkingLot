<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ContactFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/main_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:text="@string/contact_message"
            android:textSize="@dimen/subtitle_font"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/contact_message_2"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:layout_editor_absoluteX="7dp" />

        <Button
            android:id="@+id/emailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingTop="@dimen/button_padding"
            android:paddingRight="@dimen/medium_margin"
            android:paddingBottom="@dimen/button_padding"
            android:text="@string/email_button"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/ic_baseline_email_24"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Button
            android:id="@+id/phoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingTop="@dimen/button_padding"
            android:paddingRight="@dimen/medium_margin"
            android:paddingBottom="@dimen/button_padding"
            android:text="@string/phone_button"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/ic_baseline_phone_24"
            app:iconTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:text="@string/address_message"
            android:textSize="@dimen/subtitle_font"
            app:layout_constraintTop_toBottomOf="@+id/phoneButton"
            tools:layout_editor_absoluteX="7dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/street_address"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/mapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingTop="@dimen/button_padding"
            android:paddingRight="@dimen/medium_margin"
            android:paddingBottom="@dimen/button_padding"
            android:text="@string/map_button"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/ic_baseline_location_on_24"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/foster_application"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapButton" />

        <Button
            android:id="@+id/formButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingTop="@dimen/button_padding"
            android:paddingRight="@dimen/medium_margin"
            android:paddingBottom="@dimen/button_padding"
            android:text="@string/application_button"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/ic_baseline_arrow_forward_ios_24"
            app:iconGravity="end"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>